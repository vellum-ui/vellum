{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@vellum/solid",
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "noEmit": true,
    "types": [
      "bun-types"
    ],
    "paths": {
      "@vellum/core": [
        "../packages/core/src/index.ts"
      ],
      "@vellum/solid": [
        "../packages/solid/src/index.ts"
      ],
      "@vellum/solid/jsx-runtime": [
        "../packages/solid/src/jsx-runtime.ts"
      ],
      "@vellum/solid/jsx-dev-runtime": [
        "../packages/solid/src/jsx-dev-runtime.ts"
      ]
    }
  },
  "include": [
    "./**/*.tsx",
    "./**/*.ts",
    "./**/*.js"
  ]
}